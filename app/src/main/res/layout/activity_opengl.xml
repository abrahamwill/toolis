<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_opengl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <id.ac.ui.cs.mobileprogramming.abraham_williams_lumbantobing.toolis.OpenGLView
        android:id="@+id/openGLView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/credit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/credit2"
        android:textSize="32dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:text="Toolis is created by" />

    <TextView
        android:id="@+id/credit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        android:text="Abraham Williams"
        android:textAlignment="center"
        android:textSize="32dp"
        android:fontFamily="sans-serif-black"
        android:textFontWeight="800" />

</RelativeLayout>